{
  "$schema": "https://biomejs.dev/schemas/2.2.5/schema.json",
  "linter": {
    "includes": ["!**/.expo", "!**/android"],
    "rules": {
      "security": {
        "noDangerouslySetInnerHtml": "off"
      },
      "suspicious": {
        "noRedeclare": "off"
      }
    }
  },
  "formatter": {
    "includes": ["!**/.expo", "!**/android"],
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 130,
    "lineEnding": "lf",
    "attributePosition": "auto"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "trailingCommas": "all",
      "bracketSpacing": true,
      "arrowParentheses": "always",
      "bracketSameLine": false,
      "semicolons": "always",
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded"
    }
  },
  "json": {
    "formatter": {
      "trailingCommas": "none"
    }
  }
}
